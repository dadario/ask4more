<h1>Listing tasks</h1>

<table>
  <tr>
	<td>Description</td>
	<td>Action</td>
  </tr>

<% @tasks.each do |task| %>
  <tr>
	<td><%=h task.description %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>